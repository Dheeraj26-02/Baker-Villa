<%- include('./partials/header') %> 
<% let message = error || success || ''; %>
<% let messageType = error ? 'error' : success ? 'success' : ''; %> 
<% if (message.length > 0) { %>
    <div
        class="fixed top-16 left-1/2 -translate-x-1/2 px-5 py-3 rounded-md 
               <%= messageType === 'error' ? 'bg-red-500' : 'bg-blue-500' %> 
               text-white text-center w-full sm:w-4/5 md:w-1/3 flex justify-center items-center shadow-md z-50"
        id="flash-message"
    >
        <span class="inline-block"> <%= message %> </span>
    </div>
<% } %>

<div class="min-h-screen flex items-center justify-center " style="background-image: url(bg.jpg); background-size: cover;">
    <div class="w-full max-w-5xl  shadow-lg rounded-lg flex flex-col md:flex-row overflow-hidden backdrop-blur-3xl">
        <!-- Left Section (Register) -->
        <div class="w-full md:w-1/2 p-10 flex flex-col justify-center backdrop-blur-3xl">
            <h2 class="text-3xl font-bold text-white">Join the Baker's-Villa</h2>
            <p class="text-white mt-2 mb-6">Create an account to stop craving ❤️.</p>
            <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                <input
                    class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="text"
                    placeholder="Full Name"
                    name="fullname"
                />
                <input
                    class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="email"
                    placeholder="Email"
                    name="email"
                />
                <input
                    class="w-full bg-gray-100 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="password"
                    placeholder="Password"
                    name="password"
                />
                <button
                    class="w-full bg-[#f37366] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#f52f2f] transition duration-300"
                    type="submit"
                >
                    Sign Up
                </button>
            </form>
        </div>

        <!-- Right Section (Login) -->
        <div class="w-full md:w-1/2  bg-[#f37366] text-white p-10 flex flex-col justify-center relative">
            <h2 class="text-3xl font-bold text-white">Welcome Back!</h2>
            <p class="mt-2 mb-6 text-white">Already have an account? Log in here.</p>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <input
                    class="w-full bg-white text-gray-800 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-white"
                    type="email"
                    placeholder="Email"
                    name="email"
                />
                <input
                    class="w-full bg-white text-gray-800 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-white"
                    type="password"
                    placeholder="Password"
                    name="password"
                />
                <button
                    class="w-full bg-white text-black px-6 py-3 rounded-lg font-semibold hover:bg-gray-200 transition duration-300"
                    type="submit"
                >
                    Log In
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        const messageElement = document.getElementById("flash-message");
        if (messageElement) {
            messageElement.style.display = "none";
        }
    }, 3000);
</script>

<%- include('./partials/footer') %>
