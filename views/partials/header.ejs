<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Baker's-Villa</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Comic+Neue:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
            /* Scrollbar width */
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            /* Light grey background */
            border-radius: 10px;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #43caff;
            /* Blue handle */
            border-radius: 10px;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #0088cc;
            /* Darker blue when hovered */
        }

        nav {
            font-family: "Comic Neue", cursive;
            font-weight: 900;
            font-style: italic;
        }
    </style>
</head>

<body>
    <% var loggedin=typeof loggedin !=="undefined" ? loggedin : true %>
        <% if (!loggedin) { %>
            <nav
                class="w-full fixed top-0 left-0 px-6 py-4 backdrop-blur-3xl shadow-md z-50 flex items-center justify-center">
                <h3 class="text-4xl font-bold text-white text-center">Baker's-Villa</h3>
            </nav>
            <% } %>
                <% if (loggedin) { %>
                    <nav
                        class="w-full fixed top-0 left-0 px-6 py-4 backdrop-blur-3xl shadow-md z-50 flex items-center justify-between bg-[#353638]">
                        <div class="flex items-center space-x-2">
                            <a href="/shop"><img class="w-[32px] h-[32px]" src="cake.png" alt=""></a>
                            <h3 class="text-4xl font-bold text-white"><span style="color: #ff7f7f;">B</span><span
                                    style="color: #ffa500;">a</span><span style="color:#ffff00">k</span><span
                                    style="color:#7FBF7F">e</span><span style="color:#0000ff">r</span><span
                                    style="color:#b799cd">'s</span><span style="color:#EE82EE">-V</span><span
                                    style="color: #ff7f7f;">i</span><span style="color: #ffa500;">l</span><span
                                    style="color:#ffff00">l</span><span style="color:#7FBF7F">a</span></h3>
                        </div>


                        <form
                            class="hidden md:flex items-center bg-gray-100 px-3 py-1  shadow-sm rounded-3xl input-form">
                            <input type="text" id="searchInput" placeholder="Search..."
                                class="bg-transparent border-none outline-none w-48 sm:w-56 md:w-64 px-2 " />
                            <button type="button" onclick="searchProducts()"
                                class="bg-blue-500 text-white px-3 py-1 rounded-2xl hover:bg-blue-400 transition">
                                Search
                            </button>
                        </form>


                        <button id="menuBtn" class="md:hidden text-2xl">
                            â˜°
                        </button>

                        <div id="navLinks"
                            class="hidden md:flex md:gap-8 items-center absolute md:static top-16 left-0 w-full md:w-auto  shadow-md md:shadow-none flex-col md:flex-row py-4 md:py-0">
                            <a href="/shop" class="text-white hover:text-blue-500 transition px-4 py-1 md:px-2">Shop</a>
                            <a href="/cart" class="text-white hover:text-blue-500 transition px-4 py-1 md:px-2">Cart</a>
                            <a href="/profile" class="text-white hover:text-blue-500 transition px-4 py-1 md:px-2">My
                                Account</a>
                            <a href="/users/logout"
                                class="text-red-500 hover:text-red-400 transition px-4 py-1 md:px-2">Logout</a>
                        </div>
                        <% } %>
                    </nav>

                    <% if (loggedin) { %>
                        <form class="md:hidden flex items-center bg-gray-100 px-3 py-2 rounded-md shadow-sm mx-6 mt-20">
                            <input type="text" name="query" id="searchInput" placeholder="Search..."
                                class="bg-transparent border-none outline-none w-full px-2" />
                            <button type="submit" onclick="searchProducts()"
                                class="bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-400 transition">
                                Search
                            </button>
                        </form>
                        <% } %>

                            <script>
                                document.querySelector(".input-form").addEventListener("input", () => {
                                    document.querySelector(".input-form").style.transform = "scale(1.05)";
                                    document.querySelector(".input-form").style.transition = "transform 0.3s ease";
                                });
                                document.getElementById("menuBtn").addEventListener("click", function () {
                                    document.getElementById("navLinks").classList.toggle("hidden");
                                });
                            </script>
</body>

</html>